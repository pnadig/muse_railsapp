<h1>Listing dashboards</h1>

<div class="row">
  <% @dashboards.each do |dashboard| %>
  <div class="col-md-3">
    
        <div class="thumbnail">
          <%= image_tag dashboard.image.url(:medium) %>
          <div class="caption">
            <h3><%= dashboard.title %></h3>
            <p>Division: <%= dashboard.division %></p>
            <p>Product: <%= dashboard.product %></p>
            
            <%= link_to 'Show', dashboard %>
            <%= link_to 'Edit', edit_dashboard_path(dashboard) %>
            <%= link_to 'Destroy', dashboard, method: :delete, data: { confirm: 'Are you sure?' } %>

         </div>
        </div>

  </div>
  <% end %>
</div>


